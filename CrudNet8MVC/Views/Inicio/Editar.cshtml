@model CrudNet8MVC.Models.Contacto

@{
    ViewData["Title"] = "Editar contactos";
}

<h1 class="text-center">Lista de Contactos - Net core 8</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong>
                        EDITAR CONTACTO
                    </strong>
                </h3>
            </div>
            <div class="card-body">
                @* creando formulario por el metodo post *@
                <form asp-action="Editar">
                    @* mandamos el ID del contacto *@
                    <input asp-for="Id" type="hidden"/>
                    

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingrese su nombre"/>
                        <span asp-validation-for="Nombre" class="text-danger"></span>

                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" placeholder="Ingrese su Telefono"/>
                        <span asp-validation-for="Telefono" class="text-danger"></span>

                        <label asp-for="Celular" class="control-label"></label>
                        <input asp-for="Celular" class="form-control" placeholder="Ingrese su Celular"/>
                        <span asp-validation-for="Celular" class="text-danger"></span>


                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingrese su Email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>


                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary d-block mx-auto">
                                <i class="fa-solid fa-user-plus"></i>
                                Editar Usuario
                            </button>
                        </div>
                    </div>
                </form>
                <a asp-controller="Inicio" asp-action="Index" class="btn btn-secondary">Regresar</a>
            </div>
        </div>
    </div>
</div>